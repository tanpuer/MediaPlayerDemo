<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/center_start_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/ic_player_center_start"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/bottom_controller_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/start_pause_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_player_start"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/current_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"
            />

        <TextView
            android:id="@+id/total_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/normal_full_screen_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_player_enlarge"
            />

    </LinearLayout>
</RelativeLayout>
